#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    {{- if eq .chezmoi.os "linux" }}
    selected=$( (find /var/home/david/code -mindepth 1 -maxdepth 2 -type d; find /var/home/david/distrobox/dterm/.local/share/chezmoi/ -maxdepth 0 -type d) | fzf --tmux center )
    {{- end }}
    {{- if eq .chezmoi.os "darwin" }}
    selected=$( (find /var/home/david/code -mindepth 1 -maxdepth 2 -type d; find /Users/david/.local/share/chezmoi/ -maxdepth 0 -type d) | fzf --tmux center )
    {{- end }}
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
